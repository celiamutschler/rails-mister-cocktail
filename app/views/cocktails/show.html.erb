<div>
  <p id="notice"><%= notice %></p>
  <div class = "text-center">
  <h1> Cocktails </h1>
  </div>
  <div style="margin-left: 450px;">
  <table>
    <thead>
      <tr>
        <th style="padding-bottom: 10px;">Name: </th>
        <th style="padding-bottom: 10px;">Dose:</th>
        <th style="padding-bottom: 10px;">Description:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td style="padding-right: 50px;"><%= @cocktail.name %></td>
          <% @doses.each do |dose| %>
            <td style="padding-right: 50px;"><%= dose.description %> </td>
            <td style="padding-right: 50px;"><%= dose.ingredient.name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %>
<%= link_to 'Add Dose', new_cocktail_dose_path(@cocktail) %>
  </div>






</div>
